<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox fx:controller="MainWindow" xmlns:fx="http://javafx.com/fxml" stylesheets="MainWindow.css"
    spacing="10" >

    <HBox spacing="10">
        <Label text="Balloon size:" />
        <Slider fx:id="slider" min="10" max="100" />
        <TextField fx:id="txtSize" />
    </HBox>

    <Pane fx:id="pane" onMouseClicked="#onMouseClicked"
        onMouseMoved="#onMouseMoved"         
        style="-fx-background-color: lightgray"
        prefWidth="500" prefHeight="500" />

    <Label fx:id="lblCoord" />
    
</VBox>