<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>

<VBox fx:controller="MainWindow" xmlns:fx="http://javafx.com/fxml" stylesheets="MainWindow.css"
    spacing="10" prefHeight="400" prefWidth="850">

    <HBox>
        <Label text="The current time is: " />
        <Label fx:id="lblTime" />
    </HBox>

    <HBox>
        <Button onAction="#onBrokenStartClicked" text="Start (Broken)"  />
        <Button onAction="#onStartClicked" text="Start"  />
        <Button onAction="#onStopClicked" text="Stop"  />
    </HBox>

    <Pane prefWidth="100" prefHeight="100">
        <ImageView fx:id="imgView"><image><Image url="@man-walking.gif"/></image></ImageView>
    </Pane>

</VBox>